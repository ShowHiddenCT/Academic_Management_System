@model WebApplication3.Models.tb_teacher

@{
    ViewBag.Title = "Edit";
    var a1 = new { @class = "col-md-2 control-label" };
    var a2 = "col-md-10";
    var a3 = new { htmlAttributes = new { @class = "form-control" } };
    var a4 = new { @class = "text-danger" };
}


<div id="myModal" class="modal fade">
    @using ()
</div>

<div id="myModal" class="modal fade">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header btn-success">
                    <h4 class="modal-title">编辑行</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", a4)
                        <div class="form-group">
                            @Html.LabelFor(model => model.TeacherNo, a1)
                            <div class="@a2">
                                @Html.EditorFor(model => model.TeacherNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.TeacherNo, "", a4)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TeacherName, a1)
                            <div class="@a2">
                                @Html.EditorFor(model => model.TeacherName, a3)
                                @Html.ValidationMessageFor(model => model.TeacherName, "", a4)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-block text-right">
                        <input type="submit" value="确定" class="btn btn-primary" />
                        <a class="btn btn-primary" href="@Url.Action("Index")">取消</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script>
    $("#myModal").modal('show');
</script>


