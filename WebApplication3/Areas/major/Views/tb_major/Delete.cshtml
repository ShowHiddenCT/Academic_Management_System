@model WebApplication3.Models.tb_major

<div id="myModal" class="modal fade" style="margin-top:50px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header btn-success" style="background: #009688">
                <h4 class="modal-title">确定删除该专业吗？</h4>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    <dt> @Html.DisplayNameFor(model => model.MajorNo) </dt>
                    <dd> @Html.DisplayFor(model => model.MajorNo) </dd>

                    <dt> @Html.DisplayNameFor(model => model.MajorName) </dt>
                    <dd> @Html.DisplayFor(model => model.MajorName) </dd>
                </dl>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="btn-block text-right">
                        <input type="submit" value="删除" class="layui-btn" />
                        <a class="layui-btn layui-btn-danger" href="@Url.Action("Index")">取消</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $("#myModal").modal();
    $(".modal-backdrop").remove();
</script>